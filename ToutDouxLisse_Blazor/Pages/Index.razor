@page "/"
@using ToutDouxMetier

<PageTitle>Index</PageTitle>

<section class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">

            <div class="card" style="border-radius: 15px;">
                <div class="card-body p-5">

                    <h6 class="mb-3">Awesome Todo List</h6>

                    <form class="d-flex justify-content-center align-items-center mb-4">
                        <div class="form-outline flex-fill">
                            <input type="text" id="form3" class="form-control form-control-lg" @bind="IntituleTache"/>
                            <label class="form-label" for="form3">What do you need to do today?</label>
                        </div>
                        <button type="button" class="btn btn-primary btn-lg ms-2" @onclick="AddTache">Add</button>
                    </form>

                    <ul class="list-group mb-0">
                        @foreach (var tache in Liste.Taches)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center border-start-0 border-top-0 border-end-0 border-bottom rounded-0 mb-2">
                                <div class="d-flex align-items-center">
                                    <input class="form-check-input me-2" type="checkbox" value="" aria-label="..." @onchange="() => Liste.TriggerDone(tache.Id)"/>
                                    @if (tache.Fait)
                                    {
                                        <s>@tache.Intitule</s>
                                    }
                                    else
                                    {
                                        @tache.Intitule
                                    }
                                </div>
                                <a href="#!" data-mdb-toggle="tooltip" title="Remove item" @onclick="() => Liste.Remove(tache.Id)">
                                    <i class="fas fa-times text-primary"></i>
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>

        </div>
    </div>
</section>

@code {

    private ListeTaches Liste = new ListeTaches(
        "Cras justo odio",
        "Dapibus ac facilisis in",
        "Morbi leo risus",
        "Porta ac consectetur ac",
        "Vestibulum at eros",
        "Morbi leo risus"
        );

    private string IntituleTache { get; set; }

    private void AddTache()
    {
        Liste.Add(IntituleTache);
        IntituleTache = "";
    }
}